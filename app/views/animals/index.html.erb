<div class='body'>


<div id="animals" class="scroll">
  <% start = @start || 'bbb' %>
  <div class='search'>
    <%= form_tag("/animals", method: "get", id: 'search') do %>
      <input type="text" name="q" id="q" value="<%=start%>" class='textbox', size="10">
      <%= submit_tag("Search") %>"
    <% end %>
  </div>

  <% @animals.each do |animal| %>
    <div id="<%= dom_id animal %>">
      <%= link_to "#{animal.search_name}", animal %>
    </div>
  <% end %>
</div>

</div>
