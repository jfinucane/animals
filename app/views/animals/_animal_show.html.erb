
<div id="<%= dom_id @animal %>">
  <h3>
    <%= @animal.search_name %>
  </h3> 
  <p>
    <strong>Is this animal Real:</strong>
    <%= @animal.real %> <br><br>
    <strong>Habitat:</strong>
    <%= @animal.habitat || "The real world" %>
  </p>
  <p>
    <% asset = "app/assets/images/real/#{@animal.image_name}.png" %>
    <% potter_asset = "app/assets/images#{@animal.image_name}.png" %>

    <% if File.exist?(Rails.root + asset) && @animal.habitat !='Harry Potter'%>
      <%= image_tag("/assets/real/#{@animal.image_name}.png", size: "500x500") %>
    <% elsif File.exist?(Rails.root + potter_asset)%>
      <%= image_tag ("#{@animal.image_name[1..-1]}.png") %>
    <% else %>
      <h2> So sorry, I couldn't find a Picture </h2>
        <img width=500px, height=500px src=
            <%= "https://7esl.com/wp-content/uploads/2020/12/#{@animal.image_name}-300x300.png"%>
        >
    <% end %>
  </p>

  <p>
    <strong>Habitat Type:</strong>
    <%= @animal.habitat_type %>
  </p>

</div>